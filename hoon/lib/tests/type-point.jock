compose
  class Point((x:@ y:@)) {
    // new() is the required constructor
    new(q:(x:@ y:@)) -> Point {
      // the return from any method must match the state shape
      (x.q y.q)
    }
    add(q:Point) -> Point {
      // we don't have infix operators yet
      (x.q y.q)
    }
  }
; // end compose

// uses the implicit new() constructor
