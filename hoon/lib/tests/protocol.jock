protocol Arithmetic {
  add(#) -> #;
  sub(#) -> #;
};

// class Point(x:@ y:@) implements Arithmetic {
class Point(x:@ y:@): Arithmetic {
  new(p:Point}) -> Point {
    x = x.p;
    y = y.p;
  };
  add(p:Point, q:Point) -> Point {
    ((x.p + x.q) (y.p + y.q));
  };
  sub(q:Point) -> Point {
    new Point(((x - q.x) (y - q.y)));
  };
};

let origin:Point = new Point(0 0);
let vector:Point = new Point(1 2);

origin.add(vector)
