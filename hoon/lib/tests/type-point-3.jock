compose
  class Point(x:Atom y:Atom) {
    add(p:(x:Atom y:Atom)) -> Point {
      (x + p.x
       y + p.y)
    }
    add-cell(p:(x:Atom y:Atom)) -> (@ @) {
      (x + p.x
       y + p.y)
    }
    inc(q:Atom) -> @ {
      +(q)
    }
  }
;

let one = Point(2 13);
let two = one.add(30 19);
let three = one.inc(41);
(two.add-cell(10 10) three)

