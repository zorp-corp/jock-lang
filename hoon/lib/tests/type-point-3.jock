compose
  class Point(x:@ y:@) {
    add(p:(x:@ y:@)) -> Point {
      (x + p.x
       y + p.y)
    }
    add-cell(p:(x:@ y:@)) -> (@ @) {
      (x + p.x
       y + p.y)
    }
    inc(q:@) -> @ {
      +(q)
    }
  }
;

let origin = Point(2 13);
let pigeon = origin.add(30 19);
pigeon.add-cell(10 10)

